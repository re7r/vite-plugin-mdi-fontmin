{
  "git": {
    "branch": "master",
    "commit": true,
    "commitMessage": "chore: release v${version}\n\n${changelog}",
    "push": true,
    "requireCleanWorkingDir": true,
    "tag": true,
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits"
    }
  }
}
